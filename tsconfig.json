{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "crawler/**/*.ts",
    "settings-authoring/**/*.ts",
    "apply-runner/**/*.ts",
    "packages/**/*.ts",
    "scripts/**/*.ts"
  ]
}
